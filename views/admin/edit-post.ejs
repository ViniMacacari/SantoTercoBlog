<div class="admin-title">
    <h2>Editar Post</h2>

    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Excluir" class="btn-delete btn">
    </form>

</div>

<form action="/edit-post/<%= data._id %>?_mehod=PUT" method="POST">
    <label for="title"><b>Título</b></label>
    <input type="text" placeholder="Título do Post" name="title" value="<%= data.title %>">

    <label for="body"><b>Conteúdo</b></label>
    <textarea name="body" cols="50" rows="10" placeholder="Conteúdo"><%= data.body %></textarea>

    <input type="submit" value="Update" class="btn">
</form>